<Window x:Class="FileIO_UI.ConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileIO_UI"
        mc:Ignorable="d"
        Title="确认操作" Height="250" Width="300">
    <Viewbox Stretch="UniformToFill">
        <DockPanel Height="230" Width="300">
            <Grid Margin="0,0,0,0" Height="228">
                <ListView Name="ConfirmList" Height="185" VerticalAlignment="Top" Margin="10,5,15,5"/>
                <Button Name="CancelButton" Content="取消" Height="24" Width="76" Margin="52,195,172,6" Click="CancelButton_Click"/>
                <Button Name="ConfirmButton" Content="确认" Height="24" Width="76" Margin="166,195,58,6" Click="ConfirmButton_Click"/>
            </Grid>
        </DockPanel>
    </Viewbox>
</Window>
